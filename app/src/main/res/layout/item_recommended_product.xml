<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="item"
            type="com.uos.vcommcerce.activity.oder.RecommendedProductData" />

        <variable
            name="adapter"
            type="com.uos.vcommcerce.activity.oder.RecommendedProductAdapter" />
    </data>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp">

            <ImageView
                android:id="@+id/recommended_title_image"
                android:layout_width="144dp"
                android:layout_height="256dp"
                android:clickable="true"
                app:imageUrl="@{item.productImg}"/>

            <TextView
                android:layout_width="144dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:lineHeight="18sp"
                android:text="@{item.productName}"
                android:textColor="@color/colorBlack"
                android:textSize="12sp"
                android:textStyle="normal">

            </TextView>

            <TextView
                android:layout_width="144dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:lineHeight="18sp"
                android:text="@{item.productPrice}"
                android:textSize="12sp"
                android:textStyle="normal"/>


        </LinearLayout>

</layout>