<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
<data>
    <variable
        name="useractivity"
        type="com.uos.vcommcerce.UserActivity" />
</data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical"
        tools:context=".UserActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="52px"
            android:gravity="center"
            android:layout_gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:gravity="center"
                android:text="dksdkffiwan"
                android:textSize="12sp"
                android:lineHeight="18sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="18px">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_Img"
                android:layout_width="93dp"
                android:layout_height="93dp"

                android:layout_marginLeft="41px"
                android:src="@mipmap/ic_launcher"
                android:onClick="@{useractivity::profileTabClickEvent}"
                ></de.hdodenhof.circleimageview.CircleImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginLeft="90px">
                <TextView
                    android:layout_width="9dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="25px"
                    android:text="0"
                    android:textSize="14dp"/>
                <TextView
                    android:layout_width="39dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="37px"
                    android:textSize="14dp"
                    android:text="팔로잉"/>
                <Button
                    android:id="@+id/followBtn"
                    android:layout_width="91dp"
                    android:layout_height="30dp"
                    android:background="@drawable/user_view_button_background"
                    android:text="팔로우"
                    >
                </Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginLeft="33px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="25px"
                    android:textSize="14dp"
                    android:text="0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="37px"
                    android:textSize="14dp"
                    android:text="팔로워"/>
                <Button
                    android:id="@+id/messageBtn"
                    android:layout_width="91dp"
                    android:layout_height="30dp"
                    android:background="@drawable/user_view_button_background"
                    android:text="메시지"
                    >
                </Button>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27px">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="나는 낭만고양이\nSweet little kitty"
                android:textSize="14dp"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27px">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#525252">
            </ImageView>
            <ImageView
                android:id="@+id/videoGridSelectBar"
                android:layout_width="70dp"
                android:layout_height="5dp"
                android:background="#000000"
                android:layout_marginLeft="180px" />

            <ImageView
                android:id="@+id/historySelectBar"
                android:layout_width="70dp"
                android:layout_height="5dp"
                android:background="#000000"
                android:layout_marginLeft="670px" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/videoGridBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="#00FFFF"
                android:gravity="center_horizontal"
                android:onClick="@{useractivity::videoTabClickEvent}"
                android:text="올린 비디오"
                android:textAlignment="center"
                android:textSize="25sp"></TextView>

            <TextView
                android:id="@+id/historyBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="#00FF22"
                android:gravity="center_horizontal"
                android:onClick="@{useractivity::historyTabClickEvent}"
                android:text="history"
                android:textAlignment="center"
                android:textSize="25sp"></TextView>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/recyclerViewBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp">
        </FrameLayout>
    </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>