<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.regist.RegistSellerInfoActivity">

    <data>

        <variable
            name="activityregistsellerinfo"
            type="com.uos.vcommcerce.activity.regist.RegistSellerInfoActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="64dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/layout_regist_seller_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp">

                    <TextView
                        android:id="@+id/activity_regist_seller_textview_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="판매자 등록"
                        android:textColor="@color/colorBlack"
                        android:textSize="40dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/activity_regist_seller_imageview_close"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_baseline_close_24" />
                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    android:lineHeight="34dp"
                    android:text="채널 이름"
                    android:textColor="@color/colorBlack"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/activity_regist_seller_info_edittext_channel_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/button_background_round_ligh_gray_8dp"
                    android:hint="채널 이름"
                    android:paddingLeft="8dp"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:lineHeight="34dp"
                    android:text="채널 URL"
                    android:textColor="@color/colorBlack"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:lineHeight="20dp"
                        android:text="http://vrand.com"
                        android:textColor="@color/colorBlack"
                        android:textSize="14dp" />

                    <EditText
                        android:id="@+id/activity_regist_seller_info_edittext_channel_address"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="17dp"
                        android:background="@drawable/button_background_round_ligh_gray_8dp"
                        android:hint="채널 주소"
                        android:paddingLeft="8dp"
                        android:textSize="14dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:lineHeight="20dp"
                    android:text="영문 및 숫자만 입력 가능합니다."
                    android:textColor="@color/color999999"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:lineHeight="34dp"
                    android:text="채널 소개"
                    android:textColor="@color/colorBlack"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/activity_regist_seller_info_edittext_channel_introduce"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/button_background_round_ligh_gray_8dp"
                    android:hint="채널 주소"
                    android:paddingLeft="8dp"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:lineHeight="34dp"
                    android:text="계좌번호"
                    android:textColor="@color/colorBlack"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/button_background_round_ligh_gray_8dp">

                    <TextView
                        android:id="@+id/activity_regist_seller_textview_file_name"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="50dp"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:singleLine="true"
                        android:text="은행 선택"
                        android:textColor="@color/color333333"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/item_terms_of_service_img_open_arrow"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/ic_baseline_arrow_open_24" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/activity_regist_seller_info_edittext_bank_account"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/button_background_round_ligh_gray_8dp"
                    android:hint="계좌 번호"
                    android:paddingLeft="8dp"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="24dp"
                    android:lineHeight="20dp"
                    android:text="개인 회원의 경우 예금주 명과 동일해야합니다.\n기업 회원의 경우 등록한 사업자 등록증에 기재된 사업자 명과 동일해야합니다.\n동일하지 않을 경우 정산이 불가합니다."
                    android:textColor="@color/color999999"
                    android:textSize="14dp" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <Button
                android:id="@+id/activity_regist_seller_button_cancel"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_background_round_black_16dp"
                android:text="임시 저장"
                android:textColor="@color/colorWhite" />

            <Button
                android:id="@+id/activity_regist_seller_button_next"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_background_round_c4c4c4_16dp"
                android:clickable="false"
                android:text="등록 신청"
                android:textColor="@color/colorWhite" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>