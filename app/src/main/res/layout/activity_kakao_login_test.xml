<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.login.KakaoLoginTest">

    <data>
        <variable
            name="kakaologin"
            type="com.uos.vcommcerce.activity.login.KakaoLoginTest" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <Button
            android:id="@+id/button_kakao_login"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="카카오 로그인"
            android:onClick="@{kakaologin::kakaoLogin}"
            />

        <Button
            android:id="@+id/button_kakaotalk_login"
            app:layout_constraintTop_toBottomOf="@+id/button_kakao_login"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="카카오톡 로그인"
            android:onClick="@{kakaologin::kakaotalkLogin}"
            />

        <Button
            android:id="@+id/button_kakao_id"
            app:layout_constraintTop_toBottomOf="@+id/button_kakaotalk_login"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="id 발급 하기"
            android:onClick="@{kakaologin::kakaoId}"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>